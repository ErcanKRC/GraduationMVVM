<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GraduationMVVM.MVVM.Views.DeviceSpecsView"
             xmlns:pages="clr-namespace:GraduationMVVM.MVVM.Views"
             Title="Device Specs">
    <FlyoutPage.Flyout>
        <pages:DeviceSpecsView x:Name="flyoutPage" />
    </FlyoutPage.Flyout>
    <ContentPage>
        <Stepper x:Name="ButtonStepper" Minimum="0" Maximum="5" Increment="1"/>
    </ContentPage>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <pages:AddDeviceView />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>