<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GraduationMVVM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GraduationMVVM"
    xmlns:pages="clr-namespace:GraduationMVVM.MVVM.Views"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="Orange">

    <TabBar>
        <Tab Title ="Home" Icon="dotnet_bot.png">
            <pages:DevicesPageView Title="Devices" />
            <pages:AddDeviceView Title="Add Devices"/>
        </Tab>
        <Tab Title ="Automations" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"
                          Route="MainPage" />
        </Tab>
    </TabBar>

</Shell>
